/************************************************************/
/**************************** MENU **************************/
/************************************************************/
.main-menu {
	.button_container{
		display: none;
	}
	
	.menu{
		z-index: 1000;

		ul{
			line-height: 3em;
			margin: 0 auto;
			text-align: right;
			
			li{
				display: inline-block;
				font-size: 0.8em;
				padding-right: 4%;
				vertical-align: middle;
			}
		}
	}
}
/************************************************************/
/*************************** HEADER *************************/
/************************************************************/
header {
	overflow: hidden;
	
	h1{
		font-size: 3em;
		padding-top: 300px;	
	}
	
	.circle {
		background: white;
		border-radius: 150px 150px 0 0;
	     -moz-border-radius: 150px 150px 0 0;
	     -webkit-border-radius: 150px 150px 0 0;
		bottom: -20px;
		height: 80px;
		left: 50%;
		margin-left: -75px;
		position: absolute;
		width: 150px;
	}
	
	.fa {
		font-size: 2em;
		position: absolute;
		bottom: 15px;
		left: 50%;
		margin-left: -15.9px;
		z-index: 1000;
	}
}

/************************************************************/
/************************* FRONTPAGE ************************/
/************************************************************/
.wrapper {	
	.about {
		overflow: hidden; 
		
		.content {
			width: 70%;
		
			p {
				margin: 0 auto;
				width: 70%;
			}
			
			img {
				width: 50%;
			}
		}
	}
		
	.what-i-do {		
		.content {
			width: 60%;

			.skills {
				margin: 0 auto;
				margin-top: 3em;

				.skills-info {
					width: 100%;
				}
				
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
		}
	}
	
	.projects {
		.content {
			.projects-container {
				margin: 0 auto;
				padding-bottom: 10em;
				width: 80%;
			
				.project-image {
					float: left;
					margin: 2%;
					position: relative;
					width: 46%;
								
					.project-description {
						background: rgba(0,0,0,0.7);
						color: white;
						display: none;
						height: 100%;
						position: absolute;
						text-align: center;
						width: 100%;
						
						h4 {
							margin-top: 10%;
							text-transform: uppercase;
						}
						
						p {
							padding-bottom: 0;
						}
						
						button {
							background-color: rgba(255, 255, 255, 0.5);
							border: none;
							border-radius: 10px;
							color: black;
							height: 50px;
							font-family: 'Josefin Sans', sans-serif;
							margin-top: 0.8em;
							text-transform: uppercase;
							width: 150px;

							p, a {
								color: white;
								font-size: 1em;
								line-height: 50px;
								margin-top: 0;
								margin-bottom: 0;
								text-align: center;
								text-transform: uppercase;
								vertical-align: middle;
							}

							
							&:hover {
								color: black;
								background-color: rgba(255, 255, 255, 1);;
								border-radius: 10px;
								border: none;
								outline: none;
							}
						}
					}
				}
				
				&:after {
					clear: both;
					content: "";
					display: block;
				}
			}
		}
	}
}

